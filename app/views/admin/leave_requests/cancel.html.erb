<div class="container mx-auto">

  <div class="row my-3 mx-auto">
    <h4 class="col-4 text-center mx-auto">有給申請取消画面</h4>
  </div>
<div class="border border-dark rounded">

  <%= form_with model: @cancel_request, url: admin_cancel_update_path(@cancel_request.id), method: :patch do |f| %>
    <div class="row py-3 col-11 mx-auto">
      <table class="table table-borderless">

        <tr>
          <th class="ml-auto col-5"><%= f.label "従業員番号" %></th>
          <td class="mx-auto">
            <%= @cancel_request.employee_id %>
          </td>
        </tr>
        <tr>
          <th class="ml-auto col-5"><%= f.label "従業員氏名" %></th>
          <td class="mx-auto row">
            <%= @cancel_request.employee.last_name %> <%= @cancel_request.employee.first_name %>
          </td>
        </tr>
        <tr>
          <th class="ml-auto col-5"><%= f.label "有給取得日" %></th>
          <td class="mx-auto">
            <%= @cancel_request.preferred_date %>
          </td>
        </tr>
        <tr>
          <th class="ml-auto col-5"><%= f.label "申請理由" %></th>
          <td class="mx-auto py-3"><%= @cancel_request.reason_for_request %></td>
        </tr>

      </table>

      <div class="row py-2 col-5 mx-auto">
        <%= f.hidden_field :canceled, :value => true %>
        <%= f.submit "申請を取り消す", class: "btn btn-danger col-12" %>
      </div>
    </div>

  <% end %>
</div>