<div class="container mx-auto">

  <div class="row my-3 mx-auto">
    <h4 class="col-12 text-center mx-auto">有休申請一覧画面</h4>
  </div>

  <div class="row py-3 col-12 mx-auto">

    <h5 class="row mx-auto text-center py-2">新規申請一覧</h5>

    <% if @leave_requests.count != 0 %>
      <table class="table table-hovered">

        <tr>
          <th>従業員番号</th>
          <th>従業員氏名</th>
          <th>詳細リンク</th>
        </tr>

        <% @leave_requests.each do |lr| %>
          <tr>
            <td><%= lr.employee_number %></td>
            <td><%= lr.employee.last_name %> <%= lr.employee.first_name %></td>
            <td><%= link_to "詳細", admin_leave_request_path(lr.id), class:"btn btn-info col-5 mx-auto py-1" %></td>
          </tr>
        <% end %>
      </table>
    <% else %>
      <p class="row mx-auto text-center py-2">現在、新規申請は届いていません。</p>
    <% end %>
  </div>

  <div class="row py-3 col-12 mx-auto">

    <h5 class="row mx-auto text-center py-2">取消申請一覧</h5>

    <% if @cancel_requests.count != 0 %>
      <table class="table table-hovered">

        <tr>
          <th>従業員番号</th>
          <th>従業員氏名</th>
          <th>詳細リンク</th>
        </tr>

        <% @cancel_requests.each do |cr| %>
          <tr>
            <td><%= cr.employee_number %></td>
            <td><%= cr.employee.last_name %> <%= cr.employee.first_name %></td>
            <td><%= link_to "詳細", edit_admin_leave_request_path(cr.id), class:"btn btn-info col-5 mx-auto py-1" %></td>
          </tr>
        <% end %>
      </table>
    <% else %>
      <p class="row mx-auto text-center py-2">現在、取消申請は届いていません。</p>
    <% end %>
  </div>
</div>