<div class="container mx-auto">

  <div class="row my-3 mx-auto">
    <h4 class="col-12 text-center mx-auto">従業員給与情報編集画面</h4>
  </div>

  <%= form_with model: @salary, url: admin_salary_path(@salary.id), method: :patch do |f| %>

    <div class="row py-3 col-11 mx-auto border border-dark rounded">
      <table class="table table-borderless col-6">
        <tr>
          <th class="ml-auto"><%= f.label "従業員番号" %></th>
          <td class="mr-auto"><%= f.text_field :employee_number, class:"form-control" %></td>
        </tr>
        <tr>
          <th class="ml-auto"><%= f.label "出勤日数" %></th>
          <td class="mr-auto"><%= f.text_field :total_workday, class:"form-control" %></td>
        </tr>
        <tr>
          <th class="ml-auto"><%= f.label "欠勤日数" %></th>
          <td class="mr-auto"><%= f.text_field :absent, class:"form-control" %></td>
        </tr>
        <tr>
          <th class="ml-auto"><%= f.label "有給消化数" %></th>
          <td class="mr-auto"><%= f.text_field :used_paid_leave, class:"form-control" %></td>
        </tr>
      </table>

      <table class="table table-borderless col-6">
        <tr>
          <th class="ml-auto"><%= f.label "時間単価" %></th>
          <td class="mr-auto"><%= f.text_field :wage, class:"form-control" %></td>
        </tr>
        <tr>
          <th class="ml-auto"><%= f.label "労働時間" %></th>
          <td class="mr-auto row">
            <%= f.text_field :total_hour, class:"form-control mx-auto col-5" %>
            <%= f.select :total_minute, options_for_select([['00', 0.0], ['10', 0.17], ['15', 0.25], ['20', 0.33], ['30', 0.5], ['40', 0.67], ['45', 0.75], ['50', 0.83]]),{}, {class:"form-control mx-auto col-5"} %>
          </td>
        </tr>
        <tr>
          <th class="ml-auto"><%= f.label "残業時間" %></th>
          <td class="mr-auto row">
            <%= f.text_field :extra_hour, class:"form-control mx-auto col-5" %>
            <%= f.select :extra_minute, options_for_select([['00', 0.0], ['10', 0.17], ['15', 0.25], ['20', 0.33], ['30', 0.5], ['40', 0.67], ['45', 0.75], ['50', 0.83]]),{}, {class:"form-control mx-auto col-5"} %>
          </td>
        </tr>
        <tr>
          <th class="ml-auto"><%= f.label "深夜時間" %></th>
          <td class="mr-auto row">
            <%= f.text_field :midnight_hour, class:"form-control mx-auto col-5" %>
            <%= f.select :midnight_minute, options_for_select([['00', 0.0], ['10', 0.17], ['15', 0.25], ['20', 0.33], ['30', 0.5], ['40', 0.67], ['45', 0.75], ['50', 0.83]]),{}, {class:"form-control mx-auto col-5"} %>
          </td>
        </tr>
      </table>

      <div class="row py-2 col-11 mx-auto">
        <%= f.submit "登録する", class: "btn btn-success col-5 mx-auto" %>
        <button type="button" class="btn btn-warning col-5 mx-auto">
          <%= link_to "前のページに戻る", :back, class:"text-white" %>
        </button>
      </div>

    </div>
  <% end %>
</div>