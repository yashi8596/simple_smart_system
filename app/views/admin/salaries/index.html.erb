<div class="container mx-auto">

  <div class="row my-3 mx-auto">
    <h4 class="col-12 text-center mx-auto">給与明細一覧画面</h4>
  </div>

  <div class="row py-3 col-12 mx-auto">
    <%= link_to "給与明細作成", new_admin_salary_path, class:"my-1 col-4 btn btn-lg btn-primary mx-auto" %>
  </div>

  <div class="row py-3 col-12 mx-auto">

    <h5 class="row mx-auto text-center py-2">-<%= Time.current.year %>年<%= Time.current.month %>月-　給与明細一覧（作成済み：<%= @salaries.count %>件）</h5>

    <table class="table table-hovered">

      <tr>
        <th class="col-3">従業員番号</th>
        <th class="col-3">従業員氏名</th>
        <th class="col-3">作成日時</th>
        <th class="col-3"></th>
      </tr>

      <% @salaries.each do |s| %>
        <tr>
          <td class="col-3"><%= s.employee_number %></td>
          <td class="col-3"><%= s.employee.last_name %> <%= s.employee.first_name %></td>
          <td class="col-3"><%= s.created_at %></td>
          <td class="col-3">
            <%= link_to "詳細", admin_salary_path(s.id), class:"btn btn-info col-12 mx-auto py-1" %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>