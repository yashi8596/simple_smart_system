<div class="container mx-auto">

  <div class="row my-3 mx-auto">
    <h4 class="col-12 text-center mx-auto">従業員編集画面</h4>
  </div>

  <%= form_with model: @employee, url: employee_path, method: :patch do |f| %>

    <div class="row py-3 col-xl-11 col-lg-11 col-12 mx-auto border border-dark rounded">
      <table class="table table-borderless">

        <tr class="flex">
          <th class="ml-auto col-4"><%= f.label "従業員番号" %></th>
          <td class="mr-auto col-8 text-center"><%= @employee.employee_number %></td>
        </tr>
        <tr>
          <th class="ml-auto"><%= f.label "従業員名" %></th>
          <td class="mx-auto row ">
            <%= f.label "姓", class:"col-xl-1 col-lg-1 col-md-1 col-2 p-0 mb-2 text-center" %>
            <%= f.text_field :last_name, required: true, class:"col-xl-5 col-lg-5 col-md-11 col-10 mb-2 form-control" %>
            <%= f.label "名", class:"col-xl-1 col-lg-1 col-md-1 col-2 p-0 mb-2 text-center" %>
            <%= f.text_field :first_name, required: true, class:"col-xl-5 col-lg-5 col-md-11 col-10 mb-2 form-control" %>
          </td>
        </tr>
        <tr>
          <th class="ml-auto"><%= f.label "従業員名(カナ)" %></th>
          <td class="mx-auto row ">
            <%= f.label "セイ", class:"col-xl-1 col-lg-1 col-md-1 col-2 p-0 mb-2 text-center" %>
            <%= f.text_field :last_name_kana, required: true, class:"col-xl-5 col-lg-5 col-md-11 col-10 mb-2 form-control" %>
            <%= f.label "メイ", class:"col-xl-1 col-lg-1 col-md-1 col-2 p-0 mb-2 text-center" %>
            <%= f.text_field :first_name_kana, required: true, class:"col-xl-5 col-lg-5 col-md-11 col-10 mb-2 form-control" %>
          </td>
        </tr>
        <tr>
          <th class="ml-auto"><%= f.label "メールアドレス" %></th>
          <td class="mr-auto"><%= f.text_field :email, required: true, class:"form-control" %></td>
        </tr>
      </table>

      <div class="row py-2 col-11 mx-auto">
        <%= f.submit "更新する", class: "btn btn-success col-xl-5 col-lg-5 col-md-5 col-10 ml-xl-auto ml-lg-auto ml-md-auto mr-xl-1 mr-lg-1 mr-md-1 mx-auto mb-2" %>
        <%= link_to "トップページに戻る", root_path, class:"col btn btn-info col-5 col-xl-5 col-lg-5 col-md-5 col-10 ml-xl-1 ml-lg-1 ml-md-1 mr-xl-auto mr-lg-auto mr-md-auto mx-auto mb-2" %>
      </div>

    </div>
  <% end %>
</div>